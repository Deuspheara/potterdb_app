<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.characters.CharacterDetailsFragment">

    <ImageView
        android:id="@+id/imageDetailCharacter"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/text_title"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameDetailCharacter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Name"
        android:textColor="@color/text_title"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDetailCharacter" />

    <TextView
        android:id="@+id/characterBirthDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif"
        android:text="Unknown"
        android:textColor="@color/text_title"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/nameDetailCharacter" />

    <TextView
        android:id="@+id/characterGender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif"
        android:text="Unknown"
        android:textColor="@color/text_title"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/characterBirthDate" />

    <TextView
        android:id="@+id/characterSpecies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif"
        android:text="Unknown"
        android:textColor="@color/text_title"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/characterGender" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_birthday"
        android:tint="@color/text_title"
        app:layout_constraintBottom_toBottomOf="@+id/characterBirthDate"
        app:layout_constraintStart_toStartOf="@+id/nameDetailCharacter"
        app:layout_constraintTop_toTopOf="@+id/characterBirthDate" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_gender"
        android:tint="@color/text_title"
        app:layout_constraintBottom_toBottomOf="@+id/characterGender"
        app:layout_constraintStart_toStartOf="@+id/nameDetailCharacter"
        app:layout_constraintTop_toTopOf="@+id/characterGender"
        app:srcCompat="@drawable/ic_gender" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_species"
        android:tint="@color/text_title"
        app:layout_constraintBottom_toBottomOf="@+id/characterSpecies"
        app:layout_constraintStart_toStartOf="@+id/nameDetailCharacter"
        app:layout_constraintTop_toTopOf="@+id/characterSpecies" />

    <ImageButton
        android:id="@+id/backButtonCharacter"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_search"
        android:src="@drawable/round_chevron_left_24"
        android:tint="@color/text_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>